{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "Default": "Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD}"
  },
  "Storage": {
    "RootPath": "/data/storage",
    "PublicBasePath": "/media"
  },
  "Jwt": {
    "Issuer": "timecrax-api",
    "Audience": "timecrax-clients",
    "Key": "${JWT_SECRET_KEY}",
    "AccessTokenMinutes": 300,
    "RefreshTokenDays": 14
  },
  "FrontendUrl": "${FRONTEND_URL}",
  "Smtp": {
    "Enabled": false,
    "Host": "smtp.gmail.com",
    "Port": 587,
    "Username": "${SMTP_USERNAME}",
    "Password": "${SMTP_PASSWORD}",
    "FromEmail": "${SMTP_FROM_EMAIL}",
    "FromName": "TimeCrax"
  },
  "AllowedHosts": "*"
}
